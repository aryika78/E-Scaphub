
@{
    ViewData["Title"] = "TransporterComplain";
    Layout = "~/Views/Shared/_TransporterLayout.cshtml";
}

<style>
    .form-container {
        background-color: aliceblue;
        box-shadow: 0 16px 24px 2px rgba(0,0,0,0.14), 0 20px 30px 5px rgba(0,0,0,0.12), 0 8px 10px -5px rgba(0,0,0,0.3);
        border-radius: 8px;
        font-family: 'Montserrat', Arial, Helvetica, sans-serif;
    }
</style>

<script type="text/javascript">
    $(function () {
        $("input[type=text]").first().focus();
    });
</script>

<style>    
    #feedback_form label.error {
        width: 100%;
        color: blue;       
        margin-left: 50px;
        margin-bottom: 5px;
    }    
    #feedback_form input.error {
        border: 3px solid red;
    }
</style>

<div class="row " style="margin-top: 150px; margin-left:350px; margin-bottom:30px;">
    <div class="col-md-6 col-md-offset-3 form-container">
        <h2>Dear @TempData["perName"],</h2>
        @using (Html.BeginForm("TransporterComplain", "Transporter", FormMethod.Post, new { id = "feedback_form" }))
        {
            <div class="row">
                <div class="col-sm-12 form-group">
                    <b>   Complain Box:</b>
                    <textarea class="form-control" type="textarea" name="Cdetails" id="Cdetails" placeholder="Please Enter your complain details here..." maxlength="6000" rows="7"></textarea>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 form-group" style="margin-left:250px;">
                    <button type="submit" id="btnSubmit" class="btn btn-lg btn-success">Submit</button>
                </div>
            </div>
        }
    </div>
</div>

@section Transportercomplain{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#feedback_form").validate({                
                rules: {
                    Cdetails: {
                        required: true
                    }
                },
                messages: {
                    Cdetails: {
                        required: 'Please enter your complain details...'
                    },
                },
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });
        });
    </script>
}