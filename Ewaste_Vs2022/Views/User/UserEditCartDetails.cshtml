@model Ewaste_Vs2022.Models.CartMaster

@{
    ViewData["Title"] = "UserEditCartDetails";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<nav class="navbar navbar-light bg-warning">
    <div class="container-fluid">
        <a class="navbar-brand" href="@Url.Action("UserHome","User", new { Pid = Convert.ToInt32(TempData["usrId"]) })">
            <img src="~/Template/assets/images/emp4.jpg" alt="" width="30" height="24" class="d-inline-block align-top">
            Ewaste
        </a>
        <a href="@Url.Action("ViewSellingCartDetails","User")" data-toggle="tooltip" title="View Add To Cart" style="font-size:40px; "><i class="fa fa-shopping-cart"></i></a>
    </div>
</nav>


<style>
    label.error.fail-alert {
        border: 2px solid red;
        border-radius: 4px;
        line-height: 1;
        padding: 10px;
        background: #ffe6eb;
        color: red;
        width: 250px;
    }
</style>

<h2 style="background-color:greenyellow; color:rosybrown; margin-top:15px; margin-bottom:15px; margin-left:15px;">
    Edit cart
</h2>
<div class="bg-warning" style="height:3px;"></div>
@using (Html.BeginForm("UserEditCartDetails", "User", FormMethod.Post, new { id = "editcartval" }))
{
    <div class="form-group">
        <input hidden="hidden" class="form-control" type="text" id="Cartid" name="Cartid" value="@Model.Cartid" readonly />
    </div>
    <div class="form-group col-lg-8">
        <span style="color:deeppink;">Quantiry/Length </span> <br />
        <input class="form-control" type="text" id="SCQty" name="SCQty" placeholder="Please enter Quantiry or Length" value="@Model.SCQty" autofocus />
    </div>

    <div class="mt-3 row">
        <div class="ml-4 col-sm-1"></div>
        <div>
            <input type="submit" id="submit" style="margin-left:700px;" value="Edit Cart" class="btn btn-success fa" />
        </div>
    </div>
}


@section addtocartValidation
    {
<script type="text/javascript">

    $(document).ready(function () {
        $("#editcartval").validate({
            errorClass: "error fail-alert",
            rules: {
                Pemail: {
                    required: true,
                    email: true
                },
                Ppassword: {
                    required: true
                }

            },
            messages: {
                Pemail: {
                    required: 'Please Enter Email Address',
                    email: 'Please Enter Email in proper format',
                    focus() { }
                },
                Ppassword: {
                    required: 'Please Enter Password',
                    focus() { }
                }
            },
            errorPlacement: function (error, element) {
                error.insertAfter(element.parent());
            }
        })
    });

</script>
}

